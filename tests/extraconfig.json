            ],
            "encode_resolutions": [
                "320x180"
            ],
            "configure": [
                {
                    "name": "tl-schema",
                    "type": "string",
                    "setting": "android.generic.2"
                }
            ]
        },
        {
            "description": "Dynamic LTR",
            "input_files": [
                "../media/320x180_900fr_avc.mp4"
            ],
            "codecs": [
                "encoder.avc"
            ],
            "configure": [
                {
                    "name": "vendor.qti-ext-enc-caps-ltr.max-count",
